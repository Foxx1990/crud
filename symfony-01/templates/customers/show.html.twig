{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ customer.surname }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ customer.number }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('customers_edit', {'id': customer.id}) }}"><button type="button" class="btn btn-warning">edit</button></a>

    {{ include('customers/_delete_form.html.twig') }}
    <a href="{{ path('customers_index') }}">back to list</a>
{% endblock %}
